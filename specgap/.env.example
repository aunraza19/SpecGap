# SpecGap Environment Configuration
# Copy this file to .env and fill in your values

# ===== REQUIRED =====
GEMINI_API_KEY=your_gemini_api_key_here

# ===== ENVIRONMENT =====
ENV=development  # development, staging, production
DEBUG=true

# ===== AI CONFIGURATION =====
GEMINI_MODEL_TEXT=gemini-3.0-flash
GEMINI_MODEL_VISION=gemini-3.0-flash

# ===== RATE LIMITING =====
AI_RATE_LIMIT_REQUESTS=30  # Max requests per window
AI_RATE_LIMIT_WINDOW=60    # Window in seconds
AI_REQUEST_DELAY=2.0       # Delay between AI calls (seconds)

# ===== DATABASE =====
DATABASE_URL=sqlite:///./specgap_audits.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/specgap

# ===== LOGGING =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT_JSON=false  # Set to true for production
# LOG_FILE=logs/specgap.log  # Uncomment to enable file logging

# ===== CORS (Frontend Origins) =====
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ===== FILE PROCESSING =====
MAX_FILE_SIZE_MB=50
MAX_CONTEXT_CHARS=100000
CHUNK_SIZE_TOKENS=8000

# ===== RETRY CONFIGURATION =====
MAX_RETRIES=3
RETRY_DELAY=5.0

